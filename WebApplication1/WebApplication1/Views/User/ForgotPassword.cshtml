@{
    ViewData["Title"] = "Registration Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Centered White Rectangle</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #D0D0D0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .window {
            width: 80%;
            height: 80%;
            background-color: #B6AEE5;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .inner_window {
            width: 60%;
            height: 80%;
            background-color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 20px;
        }

        .inner_content {
            display: flex;
            justify-content: flex-start;
            align-items: flex-start;
            flex-direction: column;
            width: 80%;
            height: 85%;
        }

        .lable {
            font-family: 'Montserrat', sans-serif;
            font-size: 24px;
            color: #B6AEE5;
            font-weight: bold;
            margin-top:25%;
        }

        .rounded-input {
            border-radius: 20px;
            border: 3px solid #B6AEE5;
            padding: 8px;
            width: 100%;
        }

        .form {
            width: 100%;
        }

        .rounded-input {
            margin-bottom: 2.5%;
        }

        .rounded-input::placeholder {
            font-weight: bold;
            color: black
        }

        .enter {
            border: none;
            background-color: #B6AEE5;
            color: white;
            padding: 10px 30px;
            border-radius: 10px;
            cursor: pointer;
        }

        .inner-buttons {
            display: flex;
            margin-top: 1%;
            margin-left:5%;
        }

        .form-row {
            display: flex;
            justify-content: space-between;
        }

        .lable2 {
            font-family: 'Montserrat', sans-serif;
            font-size: 16px;
            color: #B6AEE5;
            font-weight: bold;
            margin-left:auto;
        }

        .ex {
            margin-left:100%;
        }
    </style>
</head>
<body>
    <div class="window">
        <div class="inner_window">
            <div class="inner_content">
                <div><p class="lable">Введіть вашу пошту</p></div>
                <form class="form" id="loginForm" action="/api/forgot-password" method="post">
                    <div class="form-row">
                        <input type="email" id="email" name="email" class="rounded-input" placeholder="Пошта">
                    </div>
                </form>
                <div>
                    <p class="lable2">На пошту прийде новий пароль</p>
                </div>
                <div class="inner-buttons">
                    <form action="/api/login" method="get">
                        <button class="enter" type="submit">Назад</button>
                    </form>
                    <button type="button" class="enter ex" onclick="submitForm()">Надіслати</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        function submitForm() {
            document.getElementById("loginForm").submit();
        }
    </script>
</body>
</html>
